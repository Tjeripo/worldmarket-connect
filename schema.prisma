generator client { provider = "prisma-client-js" }
datasource db { provider = "postgresql" url = env("DATABASE_URL") }

model User { id String @id @default(cuid()) email String @unique name String? verified Boolean @default(false) createdAt DateTime @default(now()) }
model Listing { id String @id @default(cuid()) title String description String? type String priceMin Float? priceMax Float? currency String? fee Float? images String[] location String? status String @default("open") ownerId String createdAt DateTime @default(now()) }
model Match { id String @id @default(cuid()) listingId String finderId String? buyerId String? sellerId String? fee Float? terms String? status String @default("pending") createdAt DateTime @default(now()) }
model Message { id String @id @default(cuid()) matchId String senderId String body String ts DateTime @default(now()) }
model Escrow { id String @id @default(cuid()) matchId String amount Float currency String providerRef String? status String }
